<%- include('../partials/header') %>

<h1 style="text-align: center;">Edit <%= campground.name %></h1>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text " value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[price]" type="number" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <div class="custom-file form-control">
                        <input type="file" name="file" id="input-files" class="custom-file-input" required accept="image/png">
                    </div>
                </div>
                <div class="form-group"> 
                    <textarea class="form-control" name="campground[description]" cols="30" rows="10"><%= campground.description %></textarea>
                </div>
                <div>
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
    
</div>

<%- include('../partials/footer') %>