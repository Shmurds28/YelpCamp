<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="data:campground/<%=campground.image.contentType%>;base64, 
                <%=campground.image.data.toString('base64')%>">
                <div class="caption-full">
                    <h4 class="pull-right" >R<%= campground.price %>/night</h4>
                    <h4><a><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted By <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" data-toggle="collapse" data-target=".addComment" >Add New comment</a>
                </div>
                <!-- href="/campgrounds/<%= campground._id %>/comments/new" -->
                <div class="collapse addComment">
                    <form action="/campgrounds/<%= campground._id %>/comments/new" method="post">
                        <div class="form-group row">   
                            <!-- <input class=" form-control" type="text" name="" placeholder="text"> -->
                            <textarea class=" form-control" name="comment[text]" rows="5" placeholder="Write a comment..."></textarea>
                            <button class="btn btn-md btn-primary">Comment</button>
                        </div>
                    </form>
                  
                  
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <Strong><%= comment.author.username %></Strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                    Edit
                                </a>
                                <form class="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                            <% } %>
                    
                        </div>
                    </div>
                    
                <%})%>
                
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>