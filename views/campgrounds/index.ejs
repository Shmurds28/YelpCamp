<%- include('../partials/header') %>
  
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
        <p>View Our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
        </p>
        </div>
    </header>
    <div class="campground row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6" >
                <div class="thumbnail">
                    <img src="data:campground/<%=campground.image.contentType%>;base64, 
                    <%=campground.image.data.toString('base64')%>">
                    <div class="text">
                        <h4> <a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a> </h4>
                    </div>
                    <!-- <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p> -->
                </div>
                
            </div>
        <% }); %>
    </div>

</div>

<%- include('../partials/footer') %>